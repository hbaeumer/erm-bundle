{
  "name": "hbaeumer/doctrine-erm-bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Heiner Baeumer",
      "email": "mail@hbaeumer.de"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Hbaeumer\\ErmBundle\\": ""
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.13",
    "phpmd/phpmd": "^2.6",
    "phpstan/phpstan": "^0.10.7",
    "phpstan/phpstan-doctrine": "^0.10.0",
    "phpunit/phpunit": "^7.5",
    "slevomat/coding-standard": "^4.8",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "scripts": {
    "phpcs": "phpcs .",
    "phpcbf": "phpcbf .",
    "phpstan": "phpstan analyse .",
    "phpmd": "phpmd . text ruleset.xml.dist ",
    "phpunit": "phpunit ",
    "check": [
      "@phpcs",
      "@phpstan",
      "@phpmd"
    ],
    "fix": [
      "php-cs-fixer fix .",
      "@phpcbf"
    ]
  }
}
